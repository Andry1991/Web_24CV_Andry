@model _24CV_WEB.Models.Curriculum

<div>
    

    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="text-center">Mi Currículum</h1>
                <hr>

               
                <img src="~/Fotos/@Model.RutaFoto" alt="Texto alternativo" class="img-fluid" />
                <h2>Datos Personales</h2>
                <ul>

                    <li><strong>Nombre:</strong> @Model.Nombre</li>
                    <li><strong>Apellido:</strong> @Model.Apellidos</li>
                    <li><strong>Correo Electrónico:</strong> @Model.Email </li>
                </ul>

                <h2>Experiencia Laboral</h2>
                <p><strong>Nombre de la Empresa</strong> - Cargo (Fecha de Inicio - Fecha de Término)</p>
                <p>Descripción de tus responsabilidades y logros en este trabajo.</p>

                <!-- Agrega más experiencias laborales si es necesario -->

                <h2>Educación</h2>
                <p><strong>Nombre de la Universidad</strong> - Título (Fecha de Graduación)</p>
                <p>Descripción de tu programa de estudios y logros académicos.</p>

                <!-- Agrega más instituciones educativas si es necesario -->

                <h2>Habilidades</h2>
                <ul>
                    <li>Habilidad 1</li>
                    <li>Habilidad 2</li>
                    <li>Habilidad 3</li>
                </ul>

                <h2>Idiomas</h2>
                <ul>
                    <li>Idioma 1 - Nivel de Proficiencia</li>
                    <li>Idioma 2 - Nivel de Proficiencia</li>
                </ul>

                <h2>Referencias</h2>
                <p>Disponibles a petición.</p>
            </div>
        </div>
    </div>
</div>